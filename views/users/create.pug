extends ../layouts/common.pug

block content
    h1 Users Create

    form(action="/users/create" method="POST")
        if(errors)
            each error in errors   
                .alert.alert-danger= error
        .formgroup
            label(for="name") Name
            input#name(name="name" type="text" class="form-control mb-3 w-25" value= values ? values.name : "")
            label(for="phone") Phone
            input#phone(name="phone" type="text" class="form-control mb-2 w-25" value= values ? values.phone : "")
            button.btn.btn-primary Create