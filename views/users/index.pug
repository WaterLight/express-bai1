
extends ../layouts/common

block content

    h1 Users List
    .d-flex
        a.btn.btn-primary.mb-3(href="/users/create") Create
        form(action="/users/search" method="GET" class="d-flex ml-auto")
            input(type="text", name="q", value=q, class="form-control w-100") 
            button(class="btn btn-primary ml-3") Search

    table.table
        tr
            th Name
            th Phone
            th Action
        each user in users     
            tr       
                td= user.name
                td= user.phone
                td 
                    a.btn.btn-light(href='/users/' + user.id) View
